{
  "name": "saas-template",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "@trpc/server": "^11.7.2",
      "better-auth": "^1.4.9",
      "ai": "^6.0.3",
      "@trpc/client": "^11.7.2",
      "@polar-sh/better-auth": "^1.1.3"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @saas-template/db db:push",
    "db:studio": "turbo -F @saas-template/db db:studio",
    "db:generate": "turbo -F @saas-template/db db:generate",
    "db:migrate": "turbo -F @saas-template/db db:migrate",
    "db:start": "turbo -F @saas-template/db db:start",
    "db:watch": "turbo -F @saas-template/db db:watch",
    "db:stop": "turbo -F @saas-template/db db:stop",
    "db:down": "turbo -F @saas-template/db db:down",
    "prepare": "husky",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@saas-template/env": "workspace:*",
    "@polar-sh/better-auth": "^1.6.3",
    "@polar-sh/sdk": "^0.42.1",
    "@sentry/node": "^10.32.1",
    "@sentry/react": "^10.32.1",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@saas-template/config": "workspace:*",
    "@types/bun": "catalog:",
    "@vitest/coverage-v8": "^4.0.16",
    "husky": "latest",
    "lint-staged": "latest",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.0.8",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.3"
}
