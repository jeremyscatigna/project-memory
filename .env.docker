# =============================================================================
# LEADMINER - Docker Environment Configuration
# =============================================================================
# Copy this file to .env when deploying with Docker Compose
# All required variables must be set before running docker-compose up
# =============================================================================

# =============================================================================
# DATABASE (PostgreSQL in Docker)
# =============================================================================
POSTGRES_DB=saas-template
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_PORT=5432

# Full connection string (used by the app, references Docker service name)
DATABASE_URL=postgresql://postgres:your-secure-postgres-password@postgres:5432/saas-template

# =============================================================================
# REDIS
# =============================================================================
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# =============================================================================
# AUTHENTICATION (Better Auth)
# =============================================================================
# Generate: openssl rand -base64 32
BETTER_AUTH_SECRET=your-32-char-secret-key-here-minimum
BETTER_AUTH_URL=https://api.yourdomain.com

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =============================================================================
# EMAIL (Resend)
# =============================================================================
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# PAYMENTS (Polar.sh)
# =============================================================================
POLAR_ACCESS_TOKEN=
POLAR_SUCCESS_URL=https://yourdomain.com/success?checkout_id={CHECKOUT_ID}
POLAR_WEBHOOK_SECRET=

# =============================================================================
# AI PROVIDERS
# =============================================================================
AI_PROVIDER=openai
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=
GROQ_API_KEY=

# =============================================================================
# AI OBSERVABILITY (Langfuse)
# =============================================================================
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# BACKGROUND JOBS (Trigger.dev)
# =============================================================================
TRIGGER_SECRET_KEY=tr_prod_xxxxxxxxxxxxx

# =============================================================================
# APPLICATION PORTS
# =============================================================================
SERVER_PORT=3000
WEB_PORT=3001

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGIN=https://yourdomain.com
