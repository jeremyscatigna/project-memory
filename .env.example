# =============================================================================
# LEADMINER - Enterprise SaaS Template
# =============================================================================
# Copy this file to .env and fill in your values
# For development, copy to apps/server/.env and apps/web/.env

# =============================================================================
# DATABASE
# =============================================================================
# For local development
DATABASE_URL=postgresql://postgres:password@localhost:5432/saas-template
# For Docker (uses service name as host)
# DATABASE_URL=postgresql://postgres:password@postgres:5432/saas-template

# Docker PostgreSQL settings (only needed when using docker-compose)
POSTGRES_DB=saas-template
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# =============================================================================
# AUTHENTICATION (Better Auth)
# =============================================================================
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-super-secret-key-at-least-32-chars
BETTER_AUTH_URL=http://localhost:3000

# =============================================================================
# OAUTH PROVIDERS (Optional - enable social login)
# =============================================================================
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =============================================================================
# EMAIL (Resend)
# =============================================================================
# Get your API key at https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# PAYMENTS (Polar.sh)
# =============================================================================
# Get your access token at https://polar.sh
POLAR_ACCESS_TOKEN=
POLAR_SUCCESS_URL=http://localhost:3001/success?checkout_id={CHECKOUT_ID}
POLAR_WEBHOOK_SECRET=

# =============================================================================
# AI PROVIDERS
# =============================================================================
# Choose your default provider: openai | anthropic | google | groq
AI_PROVIDER=google

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxx

# Anthropic - https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx

# Google AI - https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY=

# Groq - https://console.groq.com/keys
GROQ_API_KEY=

# =============================================================================
# AI OBSERVABILITY (Langfuse)
# =============================================================================
# Get your keys at https://cloud.langfuse.com
LANGFUSE_SECRET_KEY=sk-lf-xxxxxxxxxxxxx
LANGFUSE_PUBLIC_KEY=pk-lf-xxxxxxxxxxxxx
LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# BACKGROUND JOBS (Trigger.dev)
# =============================================================================
# Get your secret key at https://trigger.dev
TRIGGER_SECRET_KEY=tr_dev_xxxxxxxxxxxxx

# =============================================================================
# CACHING & RATE LIMITING (Redis)
# =============================================================================
REDIS_URL=redis://localhost:6379
# For Docker: REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# =============================================================================
# APPLICATION
# =============================================================================
CORS_ORIGIN=http://localhost:3001
NODE_ENV=development

# Docker port mappings (only for docker-compose)
SERVER_PORT=3000
WEB_PORT=3001

# =============================================================================
# WEB APP (Vite)
# =============================================================================
VITE_SERVER_URL=http://localhost:3000
